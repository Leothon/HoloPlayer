<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/to_draw_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:text="使用自定义View和surfaceView绘制图片"
            android:textColor="#ffffff"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_item_main"
            app:layout_constraintBottom_toTopOf="@+id/to_audio"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/to_audio"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:text="使用AudioRecord和AudioTrack\n采集和播放PCM音频"
            android:textColor="#ffffff"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_item_main"
            app:layout_constraintBottom_toTopOf="@+id/to_camera"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/to_draw_view" />


        <TextView
            android:id="@+id/to_camera"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:text="使用SurfaceView和TextureView\n显示camera预览"
            android:textColor="#ffffff"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_item_main"
            app:layout_constraintBottom_toTopOf="@+id/to_video"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/to_audio" />

        <TextView
            android:id="@+id/to_video"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:text="使用MediaExtractor分离mp4\n使用MediaMuxer合并成mp4"
            android:textColor="#ffffff"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_item_main"
            app:layout_constraintBottom_toTopOf="@+id/to_open_gl"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/to_camera" />

        <TextView
            android:id="@+id/to_open_gl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="40dp"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:text="openGL Api的使用"
            android:textColor="#ffffff"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_item_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/to_video" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>