<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AudioHandleActivity">
    <TextView
        android:id="@+id/start_record"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:text="开始录音"
        android:textColor="#ffffff"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_item_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/show_record_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/start_record"/>


    <TextView
        android:id="@+id/start_play"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:text="开始播放"
        android:textColor="#ffffff"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_item_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_record_status" />


    <TextView
        android:id="@+id/start_decode"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:text="解码"
        android:textColor="#ffffff"
        android:layout_marginVertical="10dp"
        android:background="@drawable/bg_item_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_play" />
</androidx.constraintlayout.widget.ConstraintLayout>